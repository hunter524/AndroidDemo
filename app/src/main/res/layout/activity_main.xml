<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="28dp"
        android:id="@+id/button" />
    <Button
        android:text="single_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/single_task_bt"/>

    <Button
        android:text="single_instance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/single_instance_bt"/>

    <Button
        android:text="Normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Normal_bt"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start_service_activity_in_remote"
        android:id="@+id/start_rmote_act"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start_local_service"
        android:id="@+id/start_local_service"/>
</LinearLayout>
